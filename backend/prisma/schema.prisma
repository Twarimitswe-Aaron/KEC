generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  admin
  teacher
  student
}

enum CourseStatus {
  ACTIVE
  ENDED
}

model User {
  id                Int       @id @default(autoincrement())
  firstName         String    @default("")
  lastName          String    @default("")
  isEmailVerified   Boolean   @default(false)
  verificationToken String?
  tokenExpiresAt    DateTime?
  email             String    @unique
  password          String
  role              Role
  refresh_token     String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  profile      Profile?
  admin        Admin?
  teacher      Teacher?
  student      Student?
  course       Course[]
  announcement Announcement[]
  responses    Response[]

  // Chat relationships
  chatParticipants     ChatParticipant[]
  sentMessages         Message[]
  messageReads         MessageRead[]
  userStatus           UserStatus?
  messageReactions     MessageReaction[]
  lastAnnouncementView DateTime          @default(now())

  // Payment relationships
  payments              Payment[]
  enrollments           Enrollment[]
  certificates          Certificates[]
  certificateTemplate   CertificateTemplate? @relation(fields: [certificateTemplateId], references: [id])
  certificateTemplateId Int?
}

model Admin {
  id              Int     @id @default(autoincrement())
  userId          Int     @unique
  title           String? @default("Administrator")
  isVisibleOnTeam Boolean @default(true)
  user            User    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Teacher {
  id              Int     @id @default(autoincrement())
  userId          Int     @unique
  title           String? @default("Instructor")
  isVisibleOnTeam Boolean @default(false)
  user            User    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Student {
  id     Int   @id @default(autoincrement())
  userId Int   @unique
  user   User? @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  certificates     Certificates[]
  onGoingCourses   Course[]       @relation("OnGoingCourses")
  completedCourses Course[]       @relation("CompletedCourses")
  failedCourses    Course[]       @relation("FailedCourses")
  feedback         Feedback[]
  ratings          Rating[]
}

model Rating {
  id        Int      @id @default(autoincrement())
  score     Int
  feedback  String?
  studentId Int
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id         Int   @id @default(autoincrement())
  uploaderId Int?
  uploader   User? @relation(fields: [uploaderId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  title       String
  description String
  category    String?
  coursePrice String
  image_url   String
  isConfirmed Boolean @default(false)

  no_lesson Int      @default(0)
  maximum   Int?
  open      Boolean?
  totalPaid String?

  // Lifecycle management
  status    CourseStatus @default(ACTIVE)
  startDate DateTime?
  endDate   DateTime?
  sessionId String? // Track course sessions for access control

  // Certificate template (per course)
  templateUrl            String? // URL to uploaded template file
  templateType           String? @default("HTML")
  certificateDescription String? // Custom description for the certificate template

  lesson     Lesson[]
  assignment Assignment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  onGoingStudents   Student[] @relation("OnGoingCourses")
  completedStudents Student[] @relation("CompletedCourses")
  failedStudents    Student[] @relation("FailedCourses")

  // Payment relationships
  payments    Payment[]
  enrollments Enrollment[]

  // Certificate relationships
  certificateTemplateId Int?
  certificateTemplate   CertificateTemplate? @relation(fields: [certificateTemplateId], references: [id])
  certificates          Certificates[]
  attendanceSessions    AttendanceSession[]
}

model Assignment {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  courseId    Int
  course      Course @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Lesson {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  isUnlocked  Boolean  @default(false)
  createdAt   DateTime @default(now())

  courseId Int
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  resources Resource[]
}

model Resource {
  id Int @id @default(autoincrement())

  lessonId Int
  lesson   Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  name       String
  type       ResourceType
  size       String?
  uploadedAt DateTime     @default(now())
  duration   String?
  url        String?
  form       Form?
}

model QuizQuestion {
  id             Int     @id @default(autoincrement())
  quizId         Int
  type           String
  question       String
  options        Json?
  correctAnswers Json?
  required       Boolean @default(false)
  points         Int     @default(1)
  imageUrl       String?
  quiz           Quiz    @relation(fields: [quizId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model QuizAttempt {
  id              Int      @id @default(autoincrement())
  quizId          Int
  submittedAt     DateTime @default(now())
  responses       String
  score           Int      @default(0)
  totalPoints     Int      @default(0)
  detailedResults String?
  marksFileUrl    String?
  quiz            Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Quiz {
  id          Int            @id @default(autoincrement())
  name        String
  description String?
  settings    Json?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  questions   QuizQuestion[]
  attempts    QuizAttempt[]
  formId      Int?
  form        Form?          @relation(fields: [formId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Form {
  id        Int        @id @default(autoincrement())
  questions Question[]
  createdAt DateTime   @default(now())

  responses  Response[]
  quizzes    Quiz[]
  resourceId Int        @unique
  resource   Resource   @relation(fields: [resourceId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Question {
  id            Int          @id @default(autoincrement())
  formId        Int
  form          Form         @relation(fields: [formId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  questionText  String
  type          QuestionType
  options       String[]
  correctAnswer String[]
  points        Int          @default(1)
  required      Boolean      @default(false)
}

model Response {
  id         Int      @id @default(autoincrement())
  userId     Int
  formId     Int
  questionId Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  form       Form     @relation(fields: [formId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  answer     String
  createdAt  DateTime @default(now())
}

enum QuestionType {
  TEXT
  MULTIPLE_CHOICE
  CHECKBOX
  DATE
  NUMBER
}

enum ResourceType {
  pdf
  video
  quiz
  word
}

model Announcement {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posterId  Int
  poster    User     @relation(fields: [posterId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Feedback {
  id        Int      @id @default(autoincrement())
  feedback  String
  studentId Int
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  id          Int       @id @default(autoincrement())
  avatar      String?
  work        String?
  education   String?
  resident    String?
  phone       String?
  dateOfBirth DateTime?

  // Rwanda location (ONLY these 3 fields)
  province String?
  district String?
  sector   String?

  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Category {
  Food
  Transport
  Entertainment
  Utilities
  Other
}

model Expense {
  id          Int      @id @default(autoincrement())
  amount      String
  category    Category
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Workshop {
  id        Int      @id @default(autoincrement())
  name      String
  location  String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Certificates {
  id        Int               @id @default(autoincrement())
  status    CertificateStatus @default(PENDING)
  issueDate DateTime?

  studentId Int
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  courseId Int
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  templateId Int?
  template   CertificateTemplate? @relation(fields: [templateId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?

  rejectionReason   String?
  certificateNumber String?
  description       String? // Custom text for the certificate

  @@unique([studentId, courseId])
}

model CertificateTemplate {
  id        Int      @id @default(autoincrement())
  name      String
  content   String   @db.Text // HTML or JSON content for the certificate design
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  certificates Certificates[]
  courses      Course[]
  users        User[]
}

enum CertificateStatus {
  PENDING
  APPROVED
  REJECTED
}

model ResetToken {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  expiresAt DateTime
}

// Chat System Models
model Chat {
  id          Int      @id @default(autoincrement())
  name        String? // For group chats
  isGroup     Boolean  @default(false)
  groupAvatar String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  participants ChatParticipant[]
  messages     Message[]

  @@map("chats")
}

model ChatParticipant {
  id       Int       @id @default(autoincrement())
  userId   Int
  chatId   Int
  isAdmin  Boolean   @default(false)
  joinedAt DateTime  @default(now())
  leftAt   DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@unique([userId, chatId])
  @@map("chat_participants")
}

model Message {
  id           Int         @id @default(autoincrement())
  chatId       Int
  senderId     Int
  content      String?
  messageType  MessageType @default(TEXT)
  fileUrl      String?
  fileName     String?
  fileSize     Int?
  fileMimeType String?
  duration     Int? // Duration in seconds for audio/voice messages
  replyToId    Int? // ID of message being replied to
  isRead       Boolean     @default(false)
  isEdited     Boolean     @default(false)
  editedAt     DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  chat    Chat      @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender  User      @relation(fields: [senderId], references: [id], onDelete: Cascade)
  replyTo Message?  @relation("MessageReply", fields: [replyToId], references: [id])
  replies Message[] @relation("MessageReply")

  readBy           MessageRead[]
  messageReactions MessageReaction[]

  @@map("messages")
}

model MessageRead {
  id        Int      @id @default(autoincrement())
  messageId Int
  userId    Int
  readAt    DateTime @default(now())

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@map("message_reads")
}

model MessageReaction {
  id        Int      @id @default(autoincrement())
  messageId Int
  userId    Int
  emoji     String
  createdAt DateTime @default(now())

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emoji])
  @@map("message_reactions")
}

model UserStatus {
  id       Int      @id @default(autoincrement())
  userId   Int      @unique
  isOnline Boolean  @default(false)
  lastSeen DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_status")
}

enum MessageType {
  TEXT
  IMAGE
  FILE
  AUDIO
  LINK
}

// Payment Integration Models
enum PaymentStatus {
  PENDING
  SUCCESSFUL
  FAILED
  CANCELLED
  EXPIRED
}

model Payment {
  id           Int           @id @default(autoincrement())
  referenceId  String        @unique // MTN MoMo reference
  userId       Int
  courseId     Int
  amount       Decimal       @db.Decimal(10, 2)
  currency     String        @default("RWF")
  status       PaymentStatus @default(PENDING)
  phoneNumber  String
  externalId   String? // MTN external ID
  payerMessage String?
  payeeNote    String?

  // Location data (captured during payment)
  location String? // Address/location text
  city     String?
  province String?
  country  String? @default("Rwanda")

  // Tracking
  initiatedAt   DateTime  @default(now())
  completedAt   DateTime?
  failedAt      DateTime?
  lastCheckedAt DateTime?

  // Metadata
  errorCode    String?
  errorMessage String?

  // Relations
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  course     Course      @relation(fields: [courseId], references: [id], onDelete: Cascade)
  enrollment Enrollment?

  @@index([userId])
  @@index([courseId])
  @@index([status])
  @@index([referenceId])
}

model Enrollment {
  id             Int       @id @default(autoincrement())
  userId         Int
  courseId       Int
  paymentId      Int?      @unique
  enrollmentDate DateTime  @default(now())
  expiresAt      DateTime? // for subscription-based courses
  sessionId      String? // Track which session student enrolled in

  // Relations
  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course  Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  payment Payment? @relation(fields: [paymentId], references: [id])

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
  @@index([paymentId])
}

model ServiceRequest {
  id    Int     @id @default(autoincrement())
  name  String
  phone String
  email String?

  // Location
  province String
  district String
  sector   String
  location String // Specific address details

  // Service Type
  serviceType ServiceType

  // Details
  equipmentDescription String?
  problemDescription   String?
  problemImage         String? // Base64 or URL
  installationDetails  String?

  // Scheduling
  preferredDate String?
  preferredTime String?
  urgencyLevel  String  @default("Normal")

  status    ServiceRequestStatus @default(PENDING)
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
}

enum ServiceType {
  INSTALLATION
  REPAIR
}

enum ServiceRequestStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// Attendance System Models
enum AttendanceStatus {
  ACTIVE
  CLOSED
}

model AttendanceSession {
  id          Int              @id @default(autoincrement())
  courseId    Int
  createdById Int // teacher who created the session
  title       String           @default("Attendance")
  status      AttendanceStatus @default(ACTIVE)
  createdAt   DateTime         @default(now())
  closedAt    DateTime?

  course  Course             @relation(fields: [courseId], references: [id], onDelete: Cascade)
  records AttendanceRecord[]

  @@index([courseId])
  @@index([createdById])
}

model AttendanceRecord {
  id        Int      @id @default(autoincrement())
  sessionId Int
  studentId Int
  markedAt  DateTime @default(now())
  present   Boolean  @default(true)

  session AttendanceSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, studentId])
  @@index([sessionId])
  @@index([studentId])
}
